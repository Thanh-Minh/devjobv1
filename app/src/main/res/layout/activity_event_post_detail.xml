<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.ActivityView.EventPostDetailActivity.EventPostDetailActivity">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/custom_gradient_morningsalad"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">

                <ImageView
                    android:id="@+id/event_post_detail_img_back"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back_white"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/event_post_detail_txt_title"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="left"
                    tools:text="KHỎE ĐẸP Smartphone tác động như nào đến làn da?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorLine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_deadline"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp" />
                    <TextView
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:text="Devjob Event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/event_post_detail_txt_time"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:text="22/12/2019"
                        android:textSize="@dimen/_11ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorLine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:id="@+id/event_post_detail_txt_content"
                    android:text="nội dung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
   </androidx.core.widget.NestedScrollView>


</LinearLayout>