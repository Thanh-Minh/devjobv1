<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/custom_block_radius_10sdp"
        android:backgroundTint="@color/colorLine">

        <LinearLayout
            android:id="@+id/item_rcv_main_event_img_imgview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp">

            <ImageView
                android:id="@+id/img_item_course_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/item_rcv_main_event_img_imgview"
                android:layout_alignTop="@+id/item_rcv_main_event_img_imgview"
                android:background="@drawable/custom_block_radius_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/anh_thien_nhien" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/item_rcv_main_event_img_imgview"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="-70dp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/custom_block_border_radius_10sdp_bg_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_rcv_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:lines="2"
                android:text="Start invalid date End 1 jul 2019"
                android:textColor="@color/bgColorMenuSelected"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/tv_item_rcv_course_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:text="Thẻ tag"
                android:textColor="@color/bgColorMenuSelected"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_rcv_main_event_img_imgview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_rcv_course_subcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:padding="@dimen/_2sdp"
                android:text="Làm chủ Java core trong 1 ngày"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>