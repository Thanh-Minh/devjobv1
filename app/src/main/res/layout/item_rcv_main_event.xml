<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <androidx.cardview.widget.CardView
       android:id="@+id/item_rcv_main_event_cardview"
       android:layout_marginTop="@dimen/_10sdp"
       app:cardCornerRadius="@dimen/_10sdp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:id="@+id/test"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:backgroundTint="#F1EFEF">

           <LinearLayout
               android:id="@+id/item_rcv_main_event_ln_imgview"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_100sdp">

               <ImageView
                   android:id="@+id/item_rcv_main_event_img_imgview"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_alignStart="@+id/item_rcv_main_event_img_imgview"
                   android:layout_alignTop="@+id/item_rcv_main_event_img_imgview"
                   android:scaleType="centerCrop"
                   android:src="@drawable/anh_thien_nhien" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="55dp"
               android:layout_below="@+id/item_rcv_main_event_ln_imgview"
               android:layout_marginLeft="@dimen/_30sdp"
               android:layout_marginTop="-55dp"
               android:layout_marginRight="@dimen/_30sdp"
               android:background="@drawable/custom_block_border_radius_10sdp_bg_white"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/item_rcv_main_event_txtTitle"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:gravity="center"
                   android:lines="1"
                   android:maxLines="1"
                   android:text="Start invalid date End 1 jul 2019"
                   android:textColor="@color/bgColorMenuSelected"
                   android:textSize="@dimen/_12ssp" />

               <TextView
                   android:id="@+id/item_rcv_main_event_txtTag"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_3sdp"
                   android:gravity="center"
                   android:lines="1"
                   android:maxLines="1"
                   android:text="Thẻ tag"
                   android:textColor="@color/bgColorMenuSelected"
                   android:textSize="@dimen/_10ssp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/item_rcv_main_event_ln_imgview"
               android:orientation="vertical">

               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_1sdp"
                   android:background="@color/colorLine" />

               <TextView
                   android:id="@+id/item_rcv_main_event_txtSubContent"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/_20sdp"
                   android:layout_marginRight="@dimen/_20sdp"
                   android:gravity="center"
                   android:lines="2"
                   android:maxLines="2"
                   android:padding="@dimen/_2sdp"
                   android:text="Smartphone tác động xấu đến sức khỏe"
                   android:textColor="@color/colorBlack"
                   android:textSize="@dimen/_12ssp"
                   android:textStyle="bold" />
           </LinearLayout>

       </RelativeLayout>
   </androidx.cardview.widget.CardView>
</RelativeLayout>