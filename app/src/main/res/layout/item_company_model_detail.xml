<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_company_model_main_ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/custom_block_pressed_background"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_rcv_company_model_detail_avatar"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:src="@drawable/anh_dep" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_1sdp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp">

            <TextView
                android:id="@+id/item_rcv_company_model_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:lines="2"
                android:maxLines="2"
                android:padding="@dimen/_1sdp"
                android:text="Tuyển"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_1sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_block_radius_3sdp_border_blue"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_2sdp">

                            <ImageView
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_location_blue" />

                            <TextView
                                android:id="@+id/item_rcv_company_model_detail_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:maxLines="2"
                                android:text="Đà nẵng"
                                android:textColor="@color/colorTextNameCompany"
                                android:textSize="@dimen/_8ssp" />
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.9"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp">

            <TextView
                android:id="@+id/item_rcv_company_model_detail_tag1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_block_radius_3sdp_border_blue"
                android:gravity="center"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="Deal"
                android:textColor="@color/colorTextNameCompany"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/item_rcv_company_model_detail_timework"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/custom_block_radius_3sdp_border_blue"
                android:gravity="center"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="Node js"
                android:textColor="@color/colorTextNameCompany"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/item_rcv_company_model_detail_timeago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/custom_block_radius_3sdp_border_blue"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="13 days ago"
                android:gravity="center"
                android:textColor="@color/colorTextNameCompany"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>